<?xml version="1.0"?>
<record-definition prefix="aff" flat="false">


    <namespaces>
        <namespace prefix="aff" uri="http://www.delving.eu/schemas/aff" schema="http://www.delving.eu/schemas/aff_1.0.xsd"/>
    </namespaces>

    <elems>
        <elem tag="localId"/>
        <elem tag="localUri"/>
        <elem tag="sourceUri"/>
        <elem tag="sourceName"/>
        <elem tag="roleUri"/>
        <elem tag="roleName"/>
        <elem tag="displayDate"/>
        <!-- don't move around or/add more elems up here. keep it as it is below -->
    </elems>

    <root tag="record">

        <elem tag="admin" singular="true">
            <elem tag="ownerUri"/>
            <elem tag="ownerName"/>
            <elem tag="providerUri"/>
            <elem tag="providerName"/>
            <elem tag="rights"/>
            <elem tag="checksum"/> <!--  hidden="true" -->
        </elem>

        <elem tag="collection" singular="true">
            <elem tag="collectionId"/>
            <elem tag="collectionUri"/>
            <elem tag="collectionName"/>
        </elem>

        <elem tag="thing" singular="true">
            <elem tag="thingId"/>
            <elem tag="thingUri"/>
            <elem tag="workType"/>
            <elem tag="title"/>
            <elem tag="description"/>
            <elem tag="language"/>
            <elem tag="displayMeasurement"/>
            <elem tag="displayYear"/>
            <elem tag="landingPage"/>
            <!-- what about facets ?? <elem tag="landingPage"/> ?? -->
        </elem>

        <elem tag="mediaFiles">
	        <elem tag="mediaFile">
                <elem tag="localURL"/>
                <elem tag="localMediaTypeUri"/>
                <elem tag="localMimeType"/>
                <elem tag="delvingMediaURI"/> <!--  hidden="true" -->
            </elem>
        </elem>

        <elem tag="actors" singular="true">
            <elem tag="actor" elems="localId, localUri, roleUri, roleName, sourceName, sourceUri, displayDate">
                <elem tag="firstName"/>
                <elem tag="lastName"/>
            </elem>
        </elem>

        <elem tag="places" singular="true">
            <elem tag="place" elems="localId, localUri, roleUri, roleName, sourceName, sourceUri, displayDate">
                <elem tag="placeName"/>
                <elem tag="lat"/>
                <elem tag="long"/>
            </elem>
        </elem>

        <elem tag="types" singular="true">
            <elem tag="type" elems="localId, localUri, roleUri, roleName, sourceName, sourceUri">
                <elem tag="typeName"/>
            </elem>
        </elem>

        <!-- other events, not part of Actors and places -->
        <elem tag="events" singular="true">
            <elem tag="event" elems="displayDate">
               <elem tag="eventTypeUri"/>
               <elem tag="evenTypeName"/>
               <elem tag="eventName"/>
            </elem>
        </elem>

    </root>

    <options> <!-- keys should be uri's -->
        <option-list keyPath="/actors/actor/roleUri"> <!--valuePath="/aff/actors/actor/roleName"> -->
            <opt key="1">Creator</opt>
            <opt key="2">Artist</opt>
            <opt key="3">Photographer</opt>
            <!--todo: more values-->
        </option-list>

        <option-list keypath="/places/place/roleURI"> <!--valuePath="/aff/places/place/roleName"> -->
            <opt key="1">Actors place of birth</opt>
            <opt key="2">Actor place of death</opt>
            <opt key="3">Production place</opt>
            <!--todo: more values-->
        </option-list>

        <option-list keyPath="/types/type/roleUri"> <!--valuePath="/aff/types/type/roleName"> -->
            <opt key="1">Classification</opt>
            <opt key="2">Subject</opt>
            <opt key="3">Technique</opt>
            <opt key="4">Material</opt>
            <opt key="5">Colour</opt>
            <!--todo: more values-->
        </option-list>

        <option-list keyPath="/events/event/eventTypeUri"> <!--valuePath="aff/events/event/eventTypeName">  -->
            <opt key="1">Production</opt>
            <opt key="2">Creation</opt>
            <opt key="3">etc</opt>
            <opt key="4">etc</opt>
            <opt key="5">etc</opt>
            <!--todo: CRM EVENTS, same as i LIDO-->
        </option-list>

        <option-list keyPath="/mediaFiles/mediaFile/localMediaTypeUri">
            <opt key="1">Thumbnail</opt>
            <opt key="2">Full image</opt>
            <opt key="3">Deep zoom image</opt>
            <opt key="4">Document</opt>
            <opt key="5">Video</opt>
            <opt key="5">Sound</opt>
            <opt key="6">etc</opt>
        </option-list>
    </options>

      <facts>
        <fact path="/admin/owner_uri" name="mets:"/>
        <fact path="/admin/owner_name" name="mets:"/>
        <fact path="/admin/provider_uri" name="mets:"/>
        <fact path="/admin/provider_name" name="mets:"/>
        <fact path="/admin/rights" name="mets:"/>
        <fact path="/thing/language" name="mets:"/>
    </facts>


    <docs>
        <--! ... -->
    </docs>

</record-definition>