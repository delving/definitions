<?xml version="1.0"?>
<record-definition prefix="aff" flat="false">


    <namespaces>
        <namespace prefix="aff" uri="http://schemas.delving.eu/aff/"
                   schema="http://schemas.delving.eu/aff/aff_1.0.xsd"/>
    </namespaces>

    <elems>
        <elem tag="localId"/>
        <elem tag="localUri"/>
        <elem tag="sourceUri"/>
        <elem tag="sourceName"/>
        <elem tag="roleUri"/>
        <elem tag="roleName"/>
        <elem tag="displayDate"/>
        <!-- don't move around or/add more elems up here. keep it as it is below -->
    </elems>

    <root tag="record">

        <elem tag="admin" singular="true">
            <elem tag="ownerUri"/>
            <elem tag="ownerName"/>
            <elem tag="providerUri"/>
            <elem tag="providerName"/>
            <elem tag="rights"/>
        </elem>

        <elem tag="collection" singular="true">
            <elem tag="collectionId"/>
            <elem tag="collectionUri"/>
            <elem tag="collectionName"/>
        </elem>

        <elem tag="thing" singular="true">
            <elem tag="thingId"/>
            <elem tag="thingUri"/>
            <elem tag="workType"/>
            <elem tag="title"/>
            <elem tag="description"/>
            <elem tag="language"/>
            <elem tag="displayDimensions"/>
            <elem tag="displayYear"/>
            <elem tag="landingPage"/>
            <!-- what about facets ?? <elem tag="landingPage"/> ?? -->
        </elem>

        <elem tag="mediaFiles">
            <elem tag="mediaFile">
                <elem tag="localURL"/>
                <elem tag="localMediaTypeUri"/>
                <elem tag="localMimeType"/>
                <!-- <elem tag="delvingMediaURI"/> -->
            </elem>
        </elem>

        <elem tag="actors" singular="true">
            <elem tag="actor" elems="localId, localUri, roleUri, roleName, sourceName, sourceUri, displayDate">
                <elem tag="firstName"/>
                <elem tag="lastName"/>
            </elem>
        </elem>

        <elem tag="places" singular="true">
            <elem tag="place" elems="localId, localUri, roleUri, roleName, sourceName, sourceUri, displayDate">
                <elem tag="placeType"/>
                <elem tag="placeName"/>
                <elem tag="admin1"/>
                <elem tag="admin2"/>
                <elem tag="admin3"/>
                <elem tag="admin4"/>
                <elem tag="country"/>
                <elem tag="lat"/>
                <elem tag="long"/>
            </elem>
        </elem>

        <elem tag="types" singular="true">
            <elem tag="type" elems="localId, localUri, roleUri, roleName, sourceName, sourceUri">
                <elem tag="typeName"/>
            </elem>
        </elem>

        <!-- other events, not part of Actors and places -->
        <elem tag="events" singular="true">
            <elem tag="event" elems="displayDate">
                <elem tag="eventTypeUri"/>
                <elem tag="evenTypeName"/>
                <elem tag="eventName"/>
            </elem>
        </elem>

    </root>

    <options> <!-- keys should be uri's -->

        <option-list path="/record/actors/actor/roleUri"> <!--valuePath="/aff/actors/actor/roleName"> -->
            <opt key="1">Creator</opt>
            <opt key="2">Artist</opt>
            <opt key="3">Photographer</opt>
            <!--todo: more values-->
        </option-list>

        <option-list path="/record/places/place/placeName"> <!--valuePath="/aff/places/place/roleName"> -->
            <opt key="1">Actors place of birth</opt>
            <opt key="2">Actor place of death</opt>
            <opt key="3">Production place</opt>
            <!--todo: more values-->
        </option-list>

        <option-list path="/record/types/type/roleUri"> <!--valuePath="/aff/types/type/roleName"> -->
            <opt key="1">Classification</opt>
            <opt key="2">Subject</opt>
            <opt key="3">Technique</opt>
            <opt key="4">Material</opt>
            <opt key="5">Colour</opt>
            <!--todo: more values-->
        </option-list>

        <option-list path="/record/events/event/eventTypeUri"> <!--valuePath="aff/events/event/eventTypeName">  -->
            <opt key="1">Production</opt>
            <opt key="2">Creation</opt>
            <opt key="3">etc</opt>
            <opt key="4">etc</opt>
            <opt key="5">etc</opt>
            <!--todo: CRM EVENTS, same as i LIDO-->
        </option-list>

        <option-list path="/record/mediaFiles/mediaFile/localMediaTypeUri">
            <opt key="1">Thumbnail</opt>
            <opt key="2">Full image</opt>
            <opt key="3">Deep zoom image</opt>
            <opt key="4">Document</opt>
            <opt key="5">Video</opt>
            <opt key="5">Sound</opt>
            <opt key="6">etc</opt>
        </option-list>
    </options>

    <facts>
        <fact-ref path="/record/admin/ownerName" name="dataProvider"/>
        <fact-ref path="/record/admin/providerName" name="provider"/>
        <fact-ref path="/record/admin/rights" name="rights"/>
        <fact-ref path="/record/thing/language" name="language"/>
    </facts>

    <bookmarks>
    </bookmarks>
    <docs>
        <doc path="/record/admin/providerName">
            <string name="Dublin Core definition">An entity responsible for making contributions to the content of the
                resource. Examples of a Contributor include a person, an organization or a service. Typically, the name
                of a Contributor should be used to indicate the entity.
            </string>
            <string name="Europeana definition">An entity responsible for making contributions to the resource</string>
            <string name="Europeana note">The name of contributors to the original analog or born digital object. This
                could be a person, an organisation or a service.
            </string>
        </doc>
    </docs>

</record-definition>