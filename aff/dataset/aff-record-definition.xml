<?xml version="1.0"?>
<record-definition prefix="aff" flat="false">


    <namespaces>
        <namespace prefix="aff" uri="http://schemas.delving.eu/aff/"
                   schema="http://schemas.delving.eu/aff/aff_1.0.xsd"/>
    </namespaces>

    <attrs>
        <attr tag="localId"/>
        <attr tag="localUri"/>
        <attr tag="sourceUri"/>
        <attr tag="sourceName"/>
        <attr tag="eventTypeUri"/>
        <attr tag="hubRecordId"/>
        <attr tag="conceptTypeUri"/>
        <attr tag="actorInRoleUri"/>
        <attr tag="placeInRoleUri"/>
        <attr tag="ResourceTypeUri"/>
    </attrs>

    <elems>
        <elem tag="rights"/>
        <elem tag="date" elems="earliestDate, latestDate"/>
            <elem tag="earliestDate"/>
            <elem tag="latestDate"/>
        <elem tag="placeAdmin"
            elems="displayAdmin1, displayAdmin2, displayAdmin3, displayAdmin4, displayCountry, lat, long"/>
        <elem tag="displayAdmin1"/>
        <elem tag="displayAdmin2"/>
        <elem tag="displayAdmin3"/>
        <elem tag="displayAdmin4"/>
        <elem tag="displayCountry"/>
        <elem tag="lat"/>
        <elem tag="long"/>
    </elems>

    <root tag="record">







        <!-- DISCUSS THE URI_MAKER WITH GERALD!!!! USE FUNCTIONS TO CREATE URIS AND "STORE" THEM IN A TAG IN THE SOURCE ANALYSIS FRAME.
        The created URIs should be exportable in xml/sql etc, AdLib update, SOFIE-Update etc-->







        <elem tag="admin" elems="rights" singular="true">
            <elem tag="dataOwnerUri"/>
            <elem tag="displayDataOwner"/>
            <elem tag="displayOwnerCountry"/>
            <elem tag="dataProviderUri"/>
            <elem tag="displayDataProvider"/>
            <elem tag="providerHubUri"/>
            <elem tag="displayProviderHub"/>
        </elem>

        <elem tag="collection" attrs="localId" singular="true">
            <elem tag="collectionUri"/>
            <elem tag="displayCollection"/>
        </elem>

        <elem tag="thing" elems="rights" attrs="localId, hubRecordId" singular="true">
            <elem tag="thingUri"/>
            <elem tag="displayWorkType"/>
            <elem tag="displayTitle"/>
            <elem tag="displayDescription"/>
            <elem tag="language"/>
            <elem tag="displayDimensions"/>
            <elem tag="displayYear"/>
            <elem tag="landingPage"/>
            <elem tag="isPartOfUri"/>
            <elem tag="hasPartUri"/>
        </elem>

        <elem tag="concepts" singular="true">
            <elem tag="concept" attrs="conceptTypeUri">
                <elem tag="displayConceptType"/>
                <elem tag="displayConcept" attrs="localId, localUri, sourceName, sourceUri"/>
            </elem>
        </elem>

        <elem tag="events" singular="true">
            <elem tag="event" elems="date" attrs="eventTypeUri">
                <elem tag="displayEventType"/>
                <elem tag="displayEvent"/>
                <elem tag="displayDate"/>

                <!-- make ADMIN1 -> 4 into options!!!!!!! -->
                <elem tag="eventPlace" elems="placeAdmin" attrs="placeInRoleUri, localId, localUri, sourceName, sourceUri">
                    <elem tag="displayPlaceInRole"/>
                    <elem tag="displayPlace"/>
                    <elem tag="displayPlaceType"/>
                </elem>

                <elem tag="eventActor" attrs="actorInRoleUri, localId, localUri, sourceName, sourceUri">
                    <elem tag="displayActorInRole"/>
                    <elem tag="displayActor"/>
                </elem>
            </elem>
        </elem>

        <elem tag="resources">
            <elem tag="resource" attrs="ResourceTypeUri">
                <elem tag="displayResourceType"/>
                <elem tag="resourceURL"/>
                <elem tag="resourceMimeType"/>
            <!-- <elem tag="delvingMediaURI"/> -->
            </elem>
        </elem>

    </root>


    <options>

        <option-list path="/record/events/event" key="@eventTypeUri" value="displayEventType">
            <opt default="true" key="http://www.cidoc-crm.org/rdfs/E12.Production">Production</opt>
            <opt default="true" key="http://www.cidoc-crm.org/rdfs/E65.Creation">Creation</opt>
            <opt default="true" key="http://www.cidoc-crm.org/rdfs/E8.Acquisition">Acquisition</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E16.Measurement">Measurement</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E67.Birth">Birth</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E69.Death">Death</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E6.Destruction">Destruction</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E9.Move">Move</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E10.Transfer_of_Custody">Transfer of Custody</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E14.Condition_Assessment">Condition Assessment</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E66.Formation">Formation</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E85.Joining">Joining</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E86.Leaving">Leaving</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/F30.Publication Event">Publication Event</opt> <!-- FRBRoo -->
            <opt key="http://www.cidoc-crm.org/rdfs/F31.Performance">Performance</opt> <!-- FRBRoo -->
            <opt key="http://id.culturecloud.eu/events/#Collecting">Collecting</opt>
            <opt key="http://id.culturecloud.eu/events/#Commissioning">Commissioning</opt>
            <opt key="http://id.culturecloud.eu/events/#Designing">Designing</opt>
            <opt key="http://id.culturecloud.eu/events/#Excavation">Excavation</opt>
            <opt key="http://id.culturecloud.eu/events/#Exhibition">Exhibition</opt>
            <opt key="http://id.culturecloud.eu/events/#Finding">Finding</opt>
            <opt key="http://id.culturecloud.eu/events/#Loss">Loss</opt>
            <opt key="http://id.culturecloud.eu/events/#Provenance">Provenance</opt>
            <opt key="http://id.culturecloud.eu/events/#Use">Use</opt>
        </option-list>

        <option-list path="/record/concepts/concept" key="@conceptTypeUri" value="displayConceptType">
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Classification">Classification</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Subject">Subject</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Material">Material</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Technique">Technique</opt>
            <opt key="http://id.culturecloud.eu/concepts/#wtf">Wtf</opt>
        </option-list>

        <!--<option-list path="/record/resources/resource/resourceType" valuePath="/record/resources/resource/resourceType">-->
            <!--<opt default="true" key="THUMBNAIL">Thumbnail</opt>-->
            <!--<opt default="true" key="FULL_IMAGE">Full image</opt>-->
            <!--<opt key="DEEP_ZOOM">Deep zoom image</opt>-->
            <!--<opt key="DOCUMENT">Document</opt>-->
            <!--<opt key="VIDEO">Video</opt>-->
            <!--<opt key="SOUND">Sound</opt>-->
        <!--</option-list>-->

        <!--<option-list path="/record/medias/mediaMimeType">-->
            <!--<opt key="jpeg">jpeg</opt>-->
            <!--<opt key="tiff">TIFF</opt>-->
            <!--<opt key="png">PNG</opt>-->
        <!--</option-list>-->

    </options>

    <bookmarks>

    </bookmarks>

    <facts>
        <fact-ref path="/record/admin/dataOwnerUri" name="dataOwnerUri"/>
        <fact-ref path="/record/admin/displayDataOwner" name="displayDataOwner"/>
        <fact-ref path="/record/admin/displayOwnerCountry" name="displayOwnerCountry"/>
        <fact-ref path="/record/admin/dataProviderUri" name="dataProviderUri"/>
        <fact-ref path="/record/admin/displayDataProvider" name="displayDataProvider"/>
        <fact-ref path="/record/admin/providerHubUri" name="providerHubUri"/>
        <fact-ref path="/record/admin/displayProviderHub" name="displayProviderHub"/>
    </facts>

</record-definition>


