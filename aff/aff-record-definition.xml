<?xml version="1.0"?>
<record-definition prefix="aff" flat="false">

    <!--<version>1.0</version>-->

    <namespaces>
        <namespace prefix="aff" uri="http://schemas.delving.eu/aff/"
                   schema="http://schemas.delving.eu/aff/aff_1.0.xsd"/>
    </namespaces>

    <attrs>
        <attr tag="localId"/>
        <attr tag="categoryUri"/>
        <attr tag="schema"/>
        <attr tag="schemaUri"/>
        <attr tag="roleInEventUri"/>
        <attr tag="isPartOfLocalId"/>
        <attr tag="collectionUri"/>
        <attr tag="isPartOfCollectionUri"/>
        <attr tag="lang"/>
        <attr tag="MIME"/>
        <attr tag="rightsUri"/>
        <attr tag="uri"/>
        <attr tag="relationType"/>
        <attr tag="dataProviderUri"/>
        <attr tag="providerUri"/>
        <attr tag="providerHubUri"/>
        <attr tag="type" systemField="true"/>
        <attr tag="typeUri" systemField="true"/>
        <attr tag="hubId" systemField="true"/>
        <attr tag="hubRecordUrl" systemField="true"/>
        <attr tag="delvingMediaUri" systemField="true"/>
    </attrs>

    <elems>
        <elem tag="date" elems="earliestDate, latestDate"/>
            <elem tag="earliestDate"/>
            <elem tag="latestDate"/>
    </elems>

    <root tag="record">

        <elem tag="admin" singular="true" attrs="dataProviderUri, providerUri, providerHubUri" unmapable="true">
            <elem tag="displayDataProvider"/>
            <elem tag="displayDataProviderCountry"/>
            <elem tag="displayProvider"/>
            <elem tag="lastChanged"/>
            <elem tag="defaultLang"/>
            <elem tag="UGC"/>
        </elem>

        <elem tag="facets" singular="true" unmapable="true">
            <elem tag="facet" attrs="type, typeUri, lang, localId, uri" unmapable="true">
                <elem tag="displayFacet"/>
                <elem tag="displayDescription"/>

                <elem tag="childFacet" attrs="type, typeUri, localId, uri" unmapable="true">
                    <elem tag="displayFacet"/>
                    <elem tag="displayDescription"/>

                    <elem tag="childFacet" attrs="type, typeUri, localId, uri" unmapable="true">
                        <elem tag="displayFacet"/>
                        <elem tag="displayDescription"/>
                    </elem>
                </elem>
            </elem>
        </elem>

        <elem tag="thing" attrs="localId, lang, hubId" singular="true" unmapable="true">
            <elem tag="uri"/>
            <elem tag="displayIdentification"/>
            <elem tag="displayTitle"/>
            <elem tag="displayDescription"/>
            <elem tag="displayInscription"/>
            <elem tag="displayDimension"/>
            <elem tag="displayYear"/>
            <elem tag="displayRights"/>
        </elem>

        <elem tag="relations" singular="true" unmapable="true">
            <elem tag="relation" attrs="type, typeUri, localId, uri, relationType">
                <elem tag="displayRelation"/>
            </elem>
        </elem>

        <elem tag="concepts" singular="true" unmapable="true">
            <elem tag="concept" attrs="type, typeUri, localId, lang, schema, schemaUri">
                <elem tag="displayConcept"/>
            </elem>
        </elem>

        <elem tag="events" singular="true" unmapable="true">
            <elem tag="event" elems="date" attrs="type, typeUri, lang">
                <elem tag="displayDate"/>
                <elem tag="displayEvent"/>
                <elem tag="displayMethod"/>
                <elem tag="displayDescription"/>

                <elem tag="eventActor" attrs="type, typeUri, roleInEventUri, localId, schema, schemaUri">
                    <elem tag="displayRoleInEvent"/>
                    <elem tag="displayActor"/>
                    <elem tag="displayNationality"/>
                    <elem tag="displayDescription"/>

                    <elem tag="relatedEvent" attrs="type, typeUri">
                        <elem tag="displayDate"/>
                        <elem tag="displayEvent"/>
                        <elem tag="displayDescription"/>

                        <elem tag="relatedEventPlace" attrs="type, typeUri, localId, schema, schemaUri" unmapable="true">
                            <elem tag="displayPlace"/>
                            <elem tag="lat"/>
                            <elem tag="long"/>
                        </elem>
                    </elem>
                </elem>

                <elem tag="eventPlace" attrs="type, typeUri, roleInEventUri, localId, schema, schemaUri" >
                    <elem tag="displayRoleInEvent"/>
                    <elem tag="displayPlace"/>
                    <elem tag="displayDescription"/>
                    <elem tag="lat"/>
                    <elem tag="long"/>

                    <elem tag="partOfPlace" attrs="type, typeUri, localId">
                        <elem tag="displayPlace"/>
                        <elem tag="lat"/>
                        <elem tag="long"/>
                    </elem>
                </elem>
            </elem>
        </elem>

        <elem tag="resources" singular="true" unmapable="true">
            <elem tag="resource" attrs="type, typeUri,  lang, MIME, rightsUri">
                <elem tag="resourceUrl"/>
                <elem tag="displayRights"/>
            </elem>
        </elem>
    </root>


    <facts>
        <fact-ref path="/record/admin/displayDataProvider" name="dataProvider"/>
        <fact-ref path="/record/admin/displayDataProviderCountry" name="country"/>
        <fact-ref path="/record/admin/displayProvider" name="provider"/>
        <!--<fact-ref path="/record/admin/@dataProviderUri" name="provider"/>-->
        <!--<fact-ref path="/record/admin/@providerUri" name="dataProviderUri"/>-->
        <!--<fact-ref path="/record/admin/@providerHubUri" name="providerHubUri"/>-->
        <!--<fact-ref path="/record/admin/displayProviderHub" name="dataProvider"/>-->
    </facts>

    <opts>

        <opt-list path="/record/facets/facet" key="@typeUri" value="@type" displayName="Facets">
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E78.Collection">Collection</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#fonds">Fonds</opt>
        </opt-list>

        <opt-list path="/record/facets/facet/childFacet" key="@typeUri" value="@type">
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#fond">Series</opt>
        </opt-list>

        <opt-list path="/record/facets/facet/childFacet/childFacet" key="@typeUri" value="@type">
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#file">File</opt>
        </opt-list>

        <opt-list path="/record/relations/relation" key="@typeUri" value="@type" displayName="Relations">
            <opt key="http://id.culturecloud.eu/concepts/#isPartOf">Is part of</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#hasPart">Has part</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#sameaAs">Same as</opt>
        </opt-list>

        <opt-list path="/record/events/event" key="@typeUri" value="@type" displayName="Events">
            <opt key="http://www.cidoc-crm.org/rdfs/E12.Production">Production</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E65.Creation">Creation</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E8.Acquisition">Acquisition</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E16.Measurement">Measurement</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E69.Death">Death</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E6.Destruction">Destruction</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E9.Move">Move</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E10.Transfer_of_Custody">Transfer of Custody</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E14.Condition_Assessment">Condition Assessment</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E66.Formation">Formation</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E85.Joining">Joining</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E86.Leaving">Leaving</opt>
            <opt hidden="true" key="http://www.??????????/rdfs/F30.Publication_Event">Publication Event</opt> <!-- FRBRoo -->
            <opt hidden="true" key="http://www.??????????.org/rdfs/F31.Performance">Performance</opt> <!-- FRBRoo -->
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Collecting">Collecting</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Commissioning">Commissioning</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Designing">Designing</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Excavation">Excavation</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Exhibition">Exhibition</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Finding">Finding</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Loss">Loss</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#Use">Use</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/events/#meeting">Meeting</opt>
        </opt-list>

        <opt-list path="/record/events/event/eventActor/relatedEvent" key="@typeUri" value="@type" displayName="Related Events">
            <opt key="http://www.cidoc-crm.org/rdfs/E67.Birth">Birth</opt>
            <opt key="http://www.cidoc-crm.org/rdfs/E69.Death">Death</opt>
        </opt-list>

        <opt-list path="/record/events/event/eventPlace/partOfPlace" key="@typeUri" value="@type" displayName="Event place">
            <opt key="http://www.geonames.org/#admin2">Municipality</opt>
            <opt key="http://www.geonames.org/#admin1">Region</opt>
            <opt key="http://www.geonames.org/#countryCode">Country</opt>
        </opt-list>

        <opt-list path="/record/concepts/concept" key="@typeUri" value="@type" displayName="Concepts">
            <opt key="http://id.culturecloud.eu/concepts/#workType">Work type</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#objectName">Object name/keyword</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#classification">Classification</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/P129B_????">Subject</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/E57_?????">Material</opt>
            <opt hidden="true" key="http://www.cidoc-crm.org/rdfs/P32F_????">Technique</opt>
        </opt-list>

        <opt-list path="/record/resources/resource" key="@typeUri" value="@type" displayName="Resources">
            <opt key="http://id.culturecloud.eu/concepts/#thumbnail">Thumbnail image</opt>
            <opt key="http://id.culturecloud.eu/concepts/#fullImage">Full image</opt>
            <opt key="http://id.culturecloud.eu/concepts/#landingPage">Landing page</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#hubRecordUrl">Hub URL</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#DeepZoom">Deep zoom image</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#Document">Document file</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#Sound">Sound file</opt>
            <opt hidden="true" key="http://id.culturecloud.eu/concepts/#Video">Video file</opt>
        </opt-list>

    </opts>




    <docs>
        <doc path="/record/thing/displayTitle">
            <string>Description: The name given to the resource. Typically, a Title will be a name by which the resource is formally known.</string>
        </doc>
    </docs>

</record-definition>
