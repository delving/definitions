<?xml version="1.0"?>
<record-definition prefix="aff" flat="false">

    <!--<version>1.0</version>-->

    <namespaces>
        <namespace prefix="aff2" uri="http://schemas.delving.eu/aff/"
                   schema="http://schemas.delving.eu/aff/aff_1.0.xsd"/>
    </namespaces>

    <attrs>
        <attr tag="localId"/>
        <attr tag="categoryUri"/>
        <attr tag="sourceUri"/>
        <attr tag="source"/>
        <attr tag="roleInEventUri"/>
        <attr tag="isPartOfLocalId"/>
        <attr tag="collectionUri"/>
        <attr tag="isPartOfCollectionUri"/>
        <attr tag="lang"/>
        <attr tag="MIME"/>
        <attr tag="rightsUri"/>
        <attr tag="uri"/>
        <attr tag="relationType"/>
        <attr tag="dataProviderUri"/>
        <attr tag="providerUri"/>
        <attr tag="providerHubUri"/>
        <attr tag="typeUri" systemField="true"/>
        <attr tag="hubRecordId" systemField="true"/>
        <attr tag="hubRecordUrl" systemField="true"/>
        <attr tag="delvingMediaUri" systemField="true"/>

    </attrs>

    <elems>
        <elem tag="date" elems="earliestDate, latestDate"/>
            <elem tag="earliestDate"/>
            <elem tag="latestDate"/>
    </elems>


    <root tag="record">

        <elem tag="admin" singular="true" attrs="dataProviderUri, providerUri, providerHubUri" unmapable="true">
            <elem tag="displayDataProvider"/>
            <elem tag="displayDataProviderCountry"/>
            <elem tag="displayProvider"/>
            <elem tag="UGC"/>
        </elem>

        <elem tag="thing" attrs="localId, categoryUri, lang, hubRecordId" singular="true" unmapable="true">
            <elem tag="uri"/>
            <elem tag="category" attrs="typeUri">
                <elem tag="displayType" systemField="true"/>
                <elem tag="displayCategory"/>
            </elem>
            <elem tag="displayIdentification"/>
            <elem tag="displayTitle"/>
            <elem tag="displayDescription"/>
            <elem tag="displayInscription"/>
            <elem tag="displayDimension"/>
            <elem tag="displayYear"/>
            <elem tag="displayRights"/>
        </elem>

        <elem tag="collections" singular="true" unmapable="true">
            <elem tag="collection" attrs="typeUri, localId" unmapable="true">
                <elem tag="displayType" systemField="true"/>
                <elem tag="displayCollection"/>
                <elem tag="displayDescription"/>
                <elem tag="isPartOfCollection" attrs="typeUri, localId" unmapable="true">

                    <elem tag="displayType" systemField="true"/>
                    <elem tag="displayCollection"/>
                    <elem tag="displayDescription"/>

                    <elem tag="isPartOfCollection" attrs="typeUri, localId" unmapable="true">
                        <elem tag="displayType" systemField="true"/>
                        <elem tag="displayCollection"/>
                        <elem tag="displayDescription"/>
                    </elem>
                </elem>
            </elem>
        </elem>

        <elem tag="relations" singular="true" unmapable="true">
            <elem tag="relation" attrs="typeUri, localId, uri, relationType">
                <elem tag="displayType"/>
                <elem tag="displayRelation"/>
            </elem>
        </elem>

        <elem tag="concepts" singular="true" unmapable="true">
            <elem tag="concept" attrs="typeUri, localId, source, sourceUri">
                <elem tag="displayType"/>
                <elem tag="displayConcept"/>
            </elem>
        </elem>

        <elem tag="events" singular="true" unmapable="true">
            <elem tag="event" elems="date" attrs="typeUri">
                <elem tag="displayType" systemField="true"/>
                <elem tag="displayDate"/>
                <elem tag="displayEvent"/>
                <elem tag="displayMethod"/>
                <elem tag="displayDescription"/>

                <elem tag="eventActor" attrs="typeUri, roleInEventUri, localId, source, sourceUri">
                    <elem tag="displayType" systemField="true"/>
                    <elem tag="displayRoleInEvent"/>
                    <elem tag="displayActor"/>
                    <elem tag="displayNationality"/>
                    <elem tag="displayDescription"/>

                    <elem tag="relatedEvent" attrs="typeUri">
                        <elem tag="displayType"  systemField="true"/>
                        <elem tag="displayDate"/>
                        <elem tag="displayDescription"/>

                        <elem tag="relatedEventPlace" attrs="typeUri,localId, source, sourceUri" unmapable="true">
                            <elem tag="displayType" systemField="true"/>
                            <elem tag="displayPlace"/>
                            <elem tag="lat"/>
                            <elem tag="long"/>
                        </elem>
                    </elem>
                </elem>

                <elem tag="eventPlace" attrs="typeUri,roleInEventUri, localId, source, sourceUri" >
                    <elem tag="displayType" systemField="true"/>
                    <elem tag="displayRoleInEvent"/>
                    <elem tag="displayPlace"/>
                    <elem tag="displayDescription"/>
                    <elem tag="lat"/>
                    <elem tag="long"/>

                    <elem tag="partOfPlace" attrs="typeUri, localId">
                        <elem tag="displayType" systemField="true"/>
                        <elem tag="displayPlace"/>
                        <elem tag="lat"/>
                        <elem tag="long"/>
                    </elem>
                </elem>
            </elem>
        </elem>

        <elem tag="resources" singular="true" unmapable="true">
            <elem tag="resource" attrs="typeUri, MIME, rightsUri">
                <elem tag="displayType" systemField="true"/>
                <elem tag="resourceUrl"/>
                <elem tag="displayRights"/>
            </elem>
        </elem>
    </root>


    <facts>
        <fact-ref path="/record/admin/displayDataProvider" name="dataProvider"/>
        <fact-ref path="/record/admin/displayDataProviderCountry" name="country"/>
        <fact-ref path="/record/admin/displayProvider" name="provider"/>
        <!--<fact-ref path="/record/admin/@dataProviderUri" name="provider"/>-->
        <!--<fact-ref path="/record/admin/@providerUri" name="dataProviderUri"/>-->
        <!--<fact-ref path="/record/admin/@providerHubUri" name="providerHubUri"/>-->
        <!--<fact-ref path="/record/admin/displayProviderHub" name="dataProvider"/>-->
    </facts>

    <opts>

        <opt-list path="/record/relations/relation" key="@typeUri" value="displayType">
            <opt default="true" key="http://id.culturecloud.eu/concepts/#isPartOf">Is part of</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#hasPart">Has part</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#sameaAs">Same as</opt>
        </opt-list>

        <opt-list path="/record/events/event" key="@typeUri" value="displayType">
            <opt default="true" key="crm:E12">Production</opt>
            <opt default="true" key="crm:E65">Creation</opt>
            <opt default="true" key="crm:E8">Acquisition</opt>
            <!--<opt key="crm:E16">Measurement</opt>-->
            <!--<opt key="crm:E69">Death</opt>-->
            <!--<opt key="crm:E6">Destruction</opt>-->
            <!--<opt key="crm:E9">Move</opt>-->
            <!--<opt key="crm:E10">Transfer of Custody</opt>-->
            <!--<opt key="crm:E14">Condition Assessment</opt>-->
            <!--<opt key="crm:E66">Formation</opt>-->
            <!--<opt key="crm:E85">Joining</opt>-->
            <!--<opt key="crm:E86">Leaving</opt>-->
            <!--<opt key="crm:F30">Publication Event</opt> &lt;!&ndash; FRBRoo &ndash;&gt;-->
            <!--<opt key="crm:F31">Performance</opt> &lt;!&ndash; FRBRoo &ndash;&gt;-->
            <!--<opt key="http://id.culturecloud.eu/events/#Collecting">Collecting</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Commissioning">Commissioning</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Designing">Designing</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Excavation">Excavation</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Exhibition">Exhibition</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Finding">Finding</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Loss">Loss</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Use">Use</opt>-->
            <opt key="http://id.culturecloud.eu/events/#meeting">Meeting</opt>
        </opt-list>

        <opt-list path="/record/events/event/eventActor/relatedEvent" key="@typeUri" value="@displayType">
            <opt key="crm:E67">Birth</opt>
            <opt key="crm:E69">Death</opt>
        </opt-list>

        <opt-list path="/record/events/event/eventPlace/partOfPlace" key="@typeUri" value="@displayType">
            <opt default="true" key="http://www.geonames.org/#admin2">Municipality</opt>
            <opt default="true" key="http://www.geonames.org/#admin1">Region</opt>
            <opt default="true" key="http://www.geonames.org/#countryCode">Country</opt>
        </opt-list>


        <opt-list path="/record/concepts/concept" key="@typeUri" value="displayType">
            <opt default="true" key="http://id.culturecloud.eu/concepts/#workType">Work type</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#objectName">Object name/keyword</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#classification">Classification</opt>
            <opt default="true" key="crm:P129B">Subject</opt>
            <opt default="true" key="crm:E57">Material</opt>
            <opt default="true" key="crm:P32F">Technique</opt>
        </opt-list>

        <opt-list path="/record/resources/resource" key="@typeUri" value="displayType">
            <opt default="true" key="http://id.culturecloud.eu/concepts/#thumbnail">Thumbnail image</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#fullImage">Full image</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#landingPage">Landing page</opt>
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#hubRecordUrl">Hub URL</opt>-->
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#DeepZoom">Deep zoom image</opt>-->
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#Document">Document file</opt>-->
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#Sound">Sound file</opt>-->
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#Video">Video file</opt>-->
        </opt-list>

        <!--<opt-list path="/record/resources/resource/resourceType" valuePath="/record/resources/resource/resourceType">-->
            <!--<opt default="true" key="THUMBNAIL">Thumbnail</opt>-->
            <!--<opt default="true" key="FULL_IMAGE">Full image</opt>-->
            <!--<opt key="DEEP_ZOOM">Deep zoom image</opt>-->
            <!--<opt key="DOCUMENT">Document</opt>-->
            <!--<opt key="VIDEO">Video</opt>-->
            <!--<opt key="SOUND">Sound</opt>-->
        <!--</opt-list>-->

        <!--<opt-list path="/record/medias/mediaMimeType">-->
            <!--<opt key="jpeg">jpeg</opt>-->
            <!--<opt key="tiff">TIFF</opt>-->
            <!--<opt key="png">PNG</opt>-->
        <!--</opt-list>-->

    </opts>


    <bookmarks>


    </bookmarks>

    <docs>
        <doc path="/record/thing/displayTitle">
            <string>Description: The name given to the resource. Typically, a Title will be a name by which the resource is formally known.</string>
        </doc>
    </docs>

</record-definition>
