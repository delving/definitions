            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/E10.Transfer_of_Custody">Transfer of Custody</discriminator>-->
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/E14.Condition_Assessment">Condition Assessment</discriminator>-->
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/E66.Formation">Formation</discriminator>-->
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/E85.Joining">Joining</discriminator>-->
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/E86.Leaving">Leaving</discriminator>-->
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/F30.Publication Event">Publication Event</discriminator> &lt;!&ndash; FRBRoo &ndash;&gt;-->
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/F31.Performance">Performance</discriminator> &lt;!&ndash; FRBRoo &ndash;&gt;-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Collecting">Collecting</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Commissioning">Commissioning</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Designing">Designing</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Excavation">Excavation</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Exhibition">Exhibition</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Finding">Finding</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Loss">Loss</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Provenance">Provenance</discriminator>-->
            <!--<discriminator key="http://id.culturecloud.eu/events/#Use">Use</discriminator>-->
        </discriminator-list>

        <discriminator-list path="/record/concepts/concept" key="@conceptCategoryUri" value="displayCategoryType">
            <discriminator default="true" key="http://id.culturecloud.eu/concepts/#Classification">Classification</discriminator>
            <discriminator default="true" key="http://id.culturecloud.eu/concepts/#Subject">Subject</discriminator>
            <discriminator default="true" key="http://id.culturecloud.eu/concepts/#Material">Material</discriminator>
            <discriminator default="true" key="http://id.culturecloud.eu/concepts/#Technique">Technique</discriminator>
        </discriminator-list>



