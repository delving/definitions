<?xml version="1.0"?>
<record-definition prefix="aff" flat="false">


    <namespaces>
        <namespace prefix="aff" uri="http://schemas.delving.eu/aff/"
                   schema="http://schemas.delving.eu/aff/aff_1.0.xsd"/>
    </namespaces>

    <attrs>

        <attr tag="localId"/>
        <attr tag="sourceUri"/>
        <attr tag="typeUri" systemField="true"/>
        <attr tag="displayType" systemField="true"/>
        <attr tag="source"/>
        <attr tag="roleInEventUri"/>
        <attr tag="displayRoleInEvent">
            <options>
                <string>tough cop</string>
                <string>nice cop</string>
            </options>
        </attr>
        <attr tag="isPartOfLocalId"/>
        <attr tag="collectionUri"/>
        <attr tag="isPartOfCollectionUri"/>
        <attr tag="sequence"/>
        <attr tag="lang"/>
        <attr tag="displayConceptType"/>
        <attr tag="hubRecordId" systemField="true"/>
        <attr tag="hubRecordUrl" systemField="true"/>
        <attr tag="delvingMediaUri" systemField="true"/>
        <attr tag="resourceMimeType"/>
        <attr tag="resourceRights"/>
    </attrs>

    <elems>
        <elem tag="date" elems="earliestDate, latestDate"/>
            <elem tag="earliestDate"/>
            <elem tag="latestDate"/>
        <elem tag="placeAdmin"
            elems="displayAdmin1, displayAdmin2, displayAdmin3, displayAdmin4, displayCountry, lat, long"/>
        <elem tag="displayAdmin1"/>
        <elem tag="displayAdmin2"/>
        <elem tag="displayAdmin3"/>
        <elem tag="displayAdmin4"/>
        <elem tag="displayCountry"/>
        <elem tag="lat"/>
        <elem tag="long"/>
    </elems>


    <root tag="record">
        <elem tag="admin" singular="true" unmappable="true">
            <elem tag="dataOwnerUri"/>
            <elem tag="displayDataOwner"/>
            <elem tag="displayOwnerCountry"/>
            <elem tag="dataProviderUri"/>
            <elem tag="displayDataProvider"/>
            <elem tag="providerHubUri"/>
            <elem tag="displayProviderHub"/>
        </elem>

        <elem tag="collection" attrs="localId, isPartOfLocalId, collectionUri, isPartOfCollectionUri" singular="true" unmappable="true">
            <elem tag="displayCollection"/>
        </elem>

        <elem tag="thing" attrs="localId, lang, hubRecordId, hubRecordUrl" singular="true" unmappable="true">
            <elem tag="thingUri"/>
            <elem tag="displayWorkType"/>
            <elem tag="displayTitle"/>
            <elem tag="displayDescription"/>
            <elem tag="displayInscription"/>
            <elem tag="displayDimension"/>
            <elem tag="displayYear"/>
            <elem tag="displayRights"/>
            <elem tag="landingPage"/>
        </elem>

        <elem tag="relations" singular="true" unmappable="true">
            <elem tag="relation" attrs="typeUri, displayType">
                <elem tag="displayRelation" attrs="localId, sequence"/>
                <elem tag="displayRelationSequence"/>
            </elem>
        </elem>

        <elem tag="concepts" singular="true" unmappable="true">
            <elem tag="concept" attrs="typeUri, displayType">
                <elem tag="displayConcept" attrs="displayConceptType, localId, source, sourceUri"/>
            </elem>
        </elem>

        <elem tag="events" singular="true" unmappable="true">
            <elem tag="event" elems="date" attrs="typeUri, displayType">
                <elem tag="displayEvent"/>
                <elem tag="displayEventDate"/>
                <elem tag="displayEventMethod"/>

                <elem tag="eventPlace" elems="placeAdmin" attrs="roleInEventUri, displayRoleInEvent, localId, source, sourceUri">
                    <elem tag="displayPlace"/>
                    <elem tag="displayPlaceType"/>
                </elem>

                <elem tag="eventActor" attrs="roleInEventUri, displayRoleInEvent, localId, source, sourceUri">
                    <elem tag="displayActor"/>
                </elem>
            </elem>
        </elem>

        <elem tag="resources" unmappable="true">
            <elem tag="resource" attrs="typeUri, displayType, resourceMimeType, resourceRights">
                <elem tag="resourceURL"/>
            </elem>
        </elem>
    </root>


    <facts>
        <fact-ref path="/record/admin/dataOwnerUri" name="provider"/>
        <fact-ref path="/record/admin/displayDataOwner" name="dataProvider"/>
        <fact-ref path="/record/admin/displayOwnerCountry" name="country"/>
        <!--<fact-ref path="/record/admin/dataProviderUri" name="dataProviderUri"/>-->
        <fact-ref path="/record/admin/displayDataProvider" name="dataProvider"/>
        <!--<fact-ref path="/record/admin/providerHubUri" name="providerHubUri"/>-->
        <!--<fact-ref path="/record/admin/displayProviderHub" name="dataProvider"/>-->
    </facts>

    <opts>
        <opt-list path="/record/relations/relation" key="@typeUri" value="@displayType">
            <opt default="true" key="http://id.culturecloud.eu/concepts/#isPartOf">Is part of</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#hasPart">Has part</opt>
        </opt-list>

        <opt-list path="/record/events/event" key="@typeUri" value="@displayType">
            <opt default="true" key="http://www.cidoc-crm.org/rdfs/E12.Production">Production</opt>
            <opt default="true" key="http://www.cidoc-crm.org/rdfs/E65.Creation">Creation</opt>
            <opt default="true" key="http://www.cidoc-crm.org/rdfs/E8.Acquisition">Acquisition</opt>
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E16.Measurement">Measurement</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E67.Birth">Birth</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E69.Death">Death</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E6.Destruction">Destruction</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E9.Move">Move</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E10.Transfer_of_Custody">Transfer of Custody</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E14.Condition_Assessment">Condition Assessment</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E66.Formation">Formation</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E85.Joining">Joining</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/E86.Leaving">Leaving</opt>-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/F30.Publication Event">Publication Event</opt> &lt;!&ndash; FRBRoo &ndash;&gt;-->
            <!--<opt key="http://www.cidoc-crm.org/rdfs/F31.Performance">Performance</opt> &lt;!&ndash; FRBRoo &ndash;&gt;-->
            <!--<opt key="http://id.culturecloud.eu/events/#Collecting">Collecting</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Commissioning">Commissioning</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Designing">Designing</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Excavation">Excavation</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Exhibition">Exhibition</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Finding">Finding</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Loss">Loss</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Provenance">Provenance</opt>-->
            <!--<opt key="http://id.culturecloud.eu/events/#Use">Use</opt>-->
        </opt-list>

        <opt-list path="/record/concepts/concept" key="@typeUri" value="@displayType">
            <opt default="true" key="http://id.culturecloud.eu/concepts/#ObjectName">Object names</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Subject">Subjects</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Material">Materials</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Technique">Techniques</opt>
        </opt-list>

        <opt-list path="/record/resources/resource" key="@typeUri" value="@displayType">
            <opt default="true" key="http://id.culturecloud.eu/concepts/#Thumbnail">Thumbnail image</opt>
            <opt default="true" key="http://id.culturecloud.eu/concepts/#FullImage">Full image</opt>
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#DeepZoom">Deep zoom image</opt>-->
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#Document">Document file</opt>-->
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#Sound">Sound file</opt>-->
            <!--<opt default="true" key="http://id.culturecloud.eu/concepts/#Video">Video file</opt>-->
        </opt-list>

        <!--<opt-list path="/record/resources/resource/resourceType" valuePath="/record/resources/resource/resourceType">-->
            <!--<opt default="true" key="THUMBNAIL">Thumbnail</opt>-->
            <!--<opt default="true" key="FULL_IMAGE">Full image</opt>-->
            <!--<opt key="DEEP_ZOOM">Deep zoom image</opt>-->
            <!--<opt key="DOCUMENT">Document</opt>-->
            <!--<opt key="VIDEO">Video</opt>-->
            <!--<opt key="SOUND">Sound</opt>-->
        <!--</opt-list>-->

        <!--<opt-list path="/record/medias/mediaMimeType">-->
            <!--<opt key="jpeg">jpeg</opt>-->
            <!--<opt key="tiff">TIFF</opt>-->
            <!--<opt key="png">PNG</opt>-->
        <!--</opt-list>-->

    </opts>


    <bookmarks>


    </bookmarks>

    <docs>
        <doc path="/record/thing/displayTitle">
            <string>Description: The name given to the resource. Typically, a Title will be a name by which the resource is formally known.</string>
        </doc>
    </docs>

</record-definition>
