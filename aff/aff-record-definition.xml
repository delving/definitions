<?xml version="1.0"?>
<record-definition prefix="aff" flat="false">


    <namespaces>
        <namespace prefix="aff" uri="http://schemas.delving.eu/aff/"
                   schema="http://schemas.delving.eu/aff/aff_1.0.xsd"/>
    </namespaces>

    <attrs>
        <attr tag="localId"/>
        <attr tag="localUri"/>
        <attr tag="sourceUri"/>
        <attr tag="displaySource"/>
        <attr tag="relationTypeUri"/>
        <attr tag="eventTypeUri"/>
        <attr tag="conceptCategoryUri"/>
        <attr tag="actorInRoleUri"/>
        <attr tag="placeInRoleUri"/>
        <attr tag="ResourceTypeUri"/>
        <attr tag="isPartOfUri"/>
        <attr tag="isPartOfLocalId"/>
        <attr tag="displayConceptType"/>
        <attr tag="sequence"/>
    </attrs>

    <elems>
        <elem tag="hubRecordId" systemElement="true"/>
        <elem tag="hubRecordUrl" systemElement="true"/>
        <elem tag="date" elems="earliestDate, latestDate"/>
            <elem tag="earliestDate"/>
            <elem tag="latestDate"/>
        <elem tag="placeAdmin"
            elems="displayAdmin1, displayAdmin2, displayAdmin3, displayAdmin4, displayCountry, lat, long"/>
        <elem tag="displayAdmin1"/>
        <elem tag="displayAdmin2"/>
        <elem tag="displayAdmin3"/>
        <elem tag="displayAdmin4"/>
        <elem tag="displayCountry"/>
        <elem tag="lat"/>
        <elem tag="long"/>
    </elems>

    <root tag="record">
        <elem tag="admin" singular="true">
            <elem tag="dataOwnerUri"/>
            <elem tag="displayDataOwner"/>
            <elem tag="displayOwnerCountry"/>
            <elem tag="dataProviderUri"/>
            <elem tag="displayDataProvider"/>
            <elem tag="providerHubUri"/>
            <elem tag="displayProviderHub"/>
        </elem>

        <elem tag="collection" attrs="localId, isPartOfLocalId, isPartOfUri" singular="true">
            <elem tag="collectionUri"/>
            <elem tag="displayCollection"/>
        </elem>

        <elem tag="thing" elems="hubRecordId, hubRecordUrl" attrs="localId" singular="true">
            <elem tag="thingUri"/>
            <elem tag="displayWorkType"/>
            <elem tag="displayTitle"/>
            <elem tag="displayDescription"/>
            <elem tag="language"/>
            <elem tag="displayDimensions"/>
            <elem tag="displayYear"/>
            <elem tag="rights"/>
            <elem tag="landingPage"/>
        </elem>

        <elem tag="relations" singular="true">
            <elem tag="relation" attrs="relationTypeUri">
                <elem tag="displayRelationType"/>
                <elem tag="displayRelation" attrs="localId, localUri, sequence"/>
                <elem tag="displayRelationSequence"/>
            </elem>
        </elem>

        <elem tag="concepts" singular="true">
            <elem tag="concept" attrs="conceptCategoryUri">
                <elem tag="displayCategoryType"/>
                <elem tag="displayConcept" attrs="displayConceptType, localId, localUri, displaySource, sourceUri"/>
            </elem>
        </elem>

        <elem tag="events" singular="true">
            <elem tag="event" elems="date" attrs="eventTypeUri">
                <elem tag="displayEventType"/>
                <elem tag="displayEvent"/>
                <elem tag="displayDate"/>
                <!-- make ADMIN1 -> 4 into discriminators!!!!!!! -->
                <elem tag="eventPlace" elems="placeAdmin" attrs="placeInRoleUri, localId, localUri, displaySource, sourceUri">
                    <elem tag="displayPlaceInRole"/>
                    <elem tag="displayPlace"/>
                    <elem tag="displayPlaceType"/>
                </elem>
                <elem tag="eventActor" attrs="actorInRoleUri, localId, localUri, displaySource, sourceUri">
                    <elem tag="displayActorInRole"/>
                    <elem tag="displayActor"/>
                </elem>
            </elem>
        </elem>
        <elem tag="resources">
            <elem tag="resource" attrs="ResourceTypeUri">
                <elem tag="displayResourceType"/>
                <elem tag="resourceURL"/>
                <elem tag="resourceMimeType"/>
                <elem tag="resourceRights"/>
                <elem tag="delvingMediaURI" systemElement="true"/>
            </elem>
        </elem>
    </root>


    <discriminators>

        <discriminator-list path="/record/relations/relation" key="@relationTypeUri" value="displayRelationType">
            <discriminator default="true" key="http://id.culturecloud.eu/concepts/#isPartOf">Is part of</discriminator>
            <discriminator default="true" key="http://id.culturecloud.eu/concepts/#hasPart">Has part</discriminator>
        </discriminator-list>

        <discriminator-list path="/record/events/event" key="@eventTypeUri" value="displayEventType">
            <discriminator default="true" key="http://www.cidoc-crm.org/rdfs/E12.Production">Production</discriminator>
            <discriminator default="true" key="http://www.cidoc-crm.org/rdfs/E65.Creation">Creation</discriminator>
            <discriminator default="true" key="http://www.cidoc-crm.org/rdfs/E8.Acquisition">Acquisition</discriminator>
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/E16.Measurement">Measurement</discriminator>-->
            <!--<discriminator key="http://www.cidoc-crm.org/rdfs/E67.Birth">Birth</discriminator>-->
